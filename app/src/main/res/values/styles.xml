<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--标题-->
    <style name="tv_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#99CCFF</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!--图片抽取-->
    <style name="style_img">
        <item name="android:layout_width">@dimen/d200</item>
        <item name="android:layout_height">@dimen/d200</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@mipmap/style_img_bg</item>
    </style>
    <!--头像抽取-->
    <style name="style_header_img">
        <item name="android:layout_width">@dimen/d100</item>
        <item name="android:layout_height">@dimen/d100</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@mipmap/style_img_bg</item>
    </style>
    <!--文本抽取-->
    <style name="style_text_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d60</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">#191818</item>
    </style>
<!--tablayout-->
    <style name="style_tab_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">#191818</item>
    </style>


</resources>